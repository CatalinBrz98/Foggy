<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Foggy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrapper">
        <div class="overlay"></div>

        <!-- Sidebar -->
        <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
            <ul class="nav sidebar-nav">
                <li class="sidebar-brand">@Html.ActionLink("Foggy", "Index", "Home")</li>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Games<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">Games</li>
                            <li>@Html.ActionLink("List", "Index", "Games")</li>
                            <li>@Html.ActionLink("Create", "Create", "Games")</li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>@Html.ActionLink("Games", "Index", "Games")</li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Discounts<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">Discounts</li>
                            <li>@Html.ActionLink("List", "Index", "Discounts")</li>
                            <li>@Html.ActionLink("Create", "Create", "Discounts")</li>
                        </ul>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Game Categories<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">Game Categories</li>
                            <li>@Html.ActionLink("List", "Index", "GameCategories")</li>
                            <li>@Html.ActionLink("Create", "Create", "GameCategories")</li>
                        </ul>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Countries<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">Countries</li>
                            <li>@Html.ActionLink("List", "Index", "Countries")</li>
                            <li>@Html.ActionLink("Create", "Create", "Countries")</li>
                        </ul>
                    </li>
                }
                @Html.Partial("_LoginPartial")
            </ul>
        </nav>
        <!-- /#sidebar-wrapper -->
        
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
                <span class="hamb-top"></span>
                <span class="hamb-middle"></span>
                <span class="hamb-bottom"></span>
            </button>

            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Foggy</p>
                </footer>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
